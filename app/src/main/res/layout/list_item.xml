<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:paddingLeft="5dp"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Date"
        android:id="@+id/dateLabel"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Reminder"
        android:id="@+id/reminderLabel"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/dateLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Comment"
        android:id="@+id/commentLabel"
        android:layout_below="@+id/reminderLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="29dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/date"
        android:layout_alignTop="@+id/dateLabel"
        android:layout_toRightOf="@+id/commentLabel"
        android:layout_toEndOf="@+id/commentLabel"
        android:layout_marginLeft="90dp"
        android:layout_marginStart="90dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/reminder"
        android:layout_alignBottom="@+id/reminderLabel"
        android:layout_alignLeft="@+id/date"
        android:layout_alignStart="@+id/date" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/comment"
        android:layout_alignTop="@+id/commentLabel"
        android:layout_alignLeft="@+id/reminder"
        android:layout_alignStart="@+id/reminder" />

</RelativeLayout>